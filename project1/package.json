{
  "scripts": {
    "build": "tsc",
    "watch-ts": "tsc -w",
    "serve-debug": "nodemon --inspect dist/app.js",
    "test": "jest",
    "watch-debug": "concurrently -k -p \"[{name}]\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ],
    "preset": "ts-jest"
  },
  "dependencies": {
    "@types/jest": "^24.0.25",
    "@types/supertest": "^2.0.8",
    "bitcoinjs-lib": "^4.0.3",
    "bitcoinjs-message": "^2.0.0",
    "body-parser": "^1.18.3",
    "concurrently": "^5.0.0",
    "crypto-js": "^3.1.9-1",
    "express": "^4.16.4",
    "hex2ascii": "0.0.3",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/crypto-js": "^3.1.43",
    "@types/express": "^4.17.2",
    "@types/morgan": "^1.7.37",
    "jest": "^24.9.0",
    "nodemon": "^2.0.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.3"
  }
}
